
<center>

  <br>
  <br>

  <h1>WhaleMove Fleet List</h1>

  <div style="border: 1px solid #000000; width: 1000px; height: 1000px; margin: 0 auto;">

    <br>
    <br>

    <%= form_tag("index", method: "get") do %>
      <p>
        <%= label_tag "检索条件" %><br>
        <%= text_field_tag :search_str %>
      </p>

      <%= select_tag(:tag, options_for_select([['检索全部', 0], ['车队名', 1], ['联系人', 2], ['联系人号码', 3], ['办公电话', 4], ['车队驻地', 5]], 0)) %>
      <tr>
        <td>
          <input type="submit" value="检索">
        </td>
      </tr>
    <% end %>

    <br>
    <br>
    <div id="fleet_list"> <%= render 'fleets/shared/fleet_list' %> </div>


    <%= link_to "New Fleet", fleets_new_path %>

    <br>
    <%= link_to "Drivers List", drivers_index_path %>

  </div>


</center>
