<%= form_tag("/home/index?page_tag=true", method: "get") do %>
  <p>
    <%= label_tag "检索条件" %><br>
    <%= text_field_tag :search_str %>
  </p>

  <%= select_tag(:tag, options_for_select([['检索全部', 0], ['车队名', 1], ['联系人', 2], ['联系人号码', 3], ['办公电话', 4], ['车队驻地', 5]], 0)) %>
  <tr>
    <td>
      <input type="submit" value="检索">
    </td>
  </tr>
<% end %>