<%= form_tag('/home/index?page_tag=true', method: "get") do %>
  <p>
    <%= label_tag "检索条件" %><br>
    <%= text_field_tag :search_str %>
  </p>

  <%= select_tag(:tag, options_for_select([['检索全部', 0], ['司机名', 1], ['手机号码', 2], ['所在的车队名', 3], ['身份证号码', 4]], 0)) %>

  <% p params %>

  <tr>
    <td>
      <input type="submit" value="检索">
    </td>
  </tr>
<% end %>